#############################################
# MUSDA PLATFORM ENV (ROOT) - LOCAL DEFAULTS #
#############################################
# Copy this file to `.env` (root). Backend loads it via dotenv.
# Frontend only uses variables that start with VITE_ at build time.

# ---- Runtime Mode ----
NODE_ENV=development
PORT=3001                  # Express server port (keep 3001 to match frontend config)

# ---- Database (MySQL) ----
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=musda               # Adjust if your schema/db name differs

# ---- Security / Auth ----
JWT_SECRET=ubah_ini_dengan_string_random_panjang

# ---- CORS / Frontend URL ----
# Used in backend for allowed origin (index.js). Netlify preview/production URLs can be appended later.
FRONTEND_URL=http://localhost:5173

# ---- External APIs ----
# Indonesian wilayah API base (leave default unless you host your own mirror)
WILAYAH_API_BASE=https://www.emsifa.com/api-wilayah-indonesia/api

# ---- Feature Flags ----
EMAIL_ENABLED=true          # Set to false to disable sending (logs only)

# ---- SMTP / Email Settings ----
# Example using Gmail (requires App Password if 2FA enabled)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false           # true if using port 465
SMTP_USER=yourgmail@example.com
SMTP_PASS=your_app_password
SMTP_FROM="MUSDA II <yourgmail@example.com>"

# ---- File / Upload Settings (optional future use) ----
# MAX_UPLOAD_MB=10

# ---- Frontend Build Vars (Vite) ----
# Used at build time only. For local dev the frontend uses hard-coded http://localhost:3001/api
VITE_API_BASE=http://localhost:3001/api

# Example: if deployed backend at Railway (replace once known)
# VITE_API_BASE=https://musda-backend.up.railway.app/api

# ---- Optional Performance / Tuning ----
# LOG_LEVEL=info
# CACHE_TTL_SECONDS=300

#############################################
# PRODUCTION / NETLIFY NOTES
# 1. In Netlify UI add (do NOT include quotes):
#    VITE_API_BASE = https://your-backend-domain/api
#    NODE_VERSION = 18.20.3
#    (Repeat SMTP_*, DB_* only if you run backend there â€“ usually backend deployed elsewhere)
# 2. Never commit real secrets (.env stays gitignored). This example is safe.
# 3. Rotate JWT_SECRET if leaked.
#############################################

